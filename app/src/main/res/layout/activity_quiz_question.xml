<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".quizQuestionsActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0" android:id="@+id/scrollView2"
            app:layout_constraintTop_toBottomOf="parent" app:layout_constraintStart_toEndOf="parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:text="What are soba noodles made of?"
                    android:layout_width="match_parent"
                    android:layout_height="276dp" android:id="@+id/question1" android:textSize="30sp"
                    android:textAlignment="center" android:baselineAligned="false"/>
            <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/q1ProgressBar"/>
            <RadioButton
                    android:text="Buckwheat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/q1CorrectAnswer"/>
            <RadioButton
                    android:text="Rye"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/q1WrongAnswer1"/>
            <RadioButton
                    android:text="Sorghum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/a1WrongAnswer2"/>
            <RadioButton
                    android:text="Wheat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/q1WrongAnswer3"/>
            <RadioButton
                    android:text="Corn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/q1WrongAnswer4"/>
            <Button
                    android:text="Submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/a1SubmitButton"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>